<launch>

  <!-- Debug -->
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <!-- Command line arguments -->
  <arg name="verbose" default="false" />
  <arg name="trials" default="1" />

  <!-- Start the demo -->
  <node name="moveit_grasps_mesh_bounding_box_demo" launch-prefix="$(arg launch_prefix)" pkg="moveit_grasps"
	type="moveit_grasps_mesh_bounding_box_demo" output="screen" args="--verbose $(arg verbose) --trials $(arg trials)">
  </node>

</launch>
